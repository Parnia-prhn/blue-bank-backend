{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended" // Keep this for Prettier integration
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/typedef": [
      "off",
      {
        "variableDeclaration": true
      }
    ],
    "max-lines-per-function": [
      "error",
      {
        "max": 100, // Set the maximum number of lines as per your requirement
        "skipBlankLines": true,
        "skipComments": true
      }
    ]
  },
  "plugins": ["@typescript-eslint"]
}
